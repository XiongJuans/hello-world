<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_panel_dark"
    android:orientation="horizontal" >

     <ImageView
         android:id = "@+id/mobile_type_imgv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="@dimen/margin_s"
         android:layout_marginRight="@dimen/margin_s"
         android:layout_marginTop="7dp"
         android:layout_marginBottom="7dp"
         android:contentDescription="strPic"
         android:src="@drawable/icon_indicator_wifi_dark_s" />
     <TextView
         android:id = "@+id/data_usage_tv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginRight="@dimen/margin_s"
         android:layout_gravity="center_vertical"
         android:textSize="@dimen/Text_size_Monitor"
         android:fontFamily="sans-serif"
         android:text="0.00KB/s"
         android:textColor="@android:color/white" />
</LinearLayout>