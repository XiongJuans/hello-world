<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/net_control"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/button_selector"
        android:textColor="@color/light_main_text_color"
        android:textSize="@dimen/listview_text_2"
        android:gravity="center"
        android:text="@string/network_control"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:stateListAnimator="@null"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listview_text_1"
            android:textColor="@color/light_main_text_color"
            android:text="@string/used_data_near_day" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/today_used"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/listview_text_1"
                android:textColor="@color/light_main_text_color"
                android:layout_marginLeft="@dimen/margin_m2"
                android:text="@string/used_data_today" />
            <TextView
                android:id="@+id/today_used_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/listview_text_2"
                android:textColor="@color/light_sec_text_color"
                android:layout_marginLeft="@dimen/margin_m2"/>

            <TextView
                android:id="@+id/yesterday_used"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/listview_text_1"
                android:textColor="@color/light_main_text_color"
                android:text="@string/used_data_yesterday"
                android:layout_marginTop="@dimen/CircleProgressView_text_marginleft"
                android:layout_marginLeft="@dimen/margin_m2"/>
            <TextView
                android:id="@+id/yesterday_used_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/listview_text_2"
                android:textColor="@color/light_sec_text_color"
                android:layout_marginLeft="@dimen/margin_m2"/>

            <TextView
                android:id="@+id/bef_yesterday_used"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/listview_text_1"
                android:textColor="@color/light_main_text_color"
                android:text="@string/used_data_before_yesterday"
                android:layout_marginTop="@dimen/CircleProgressView_text_marginleft"
                android:layout_marginLeft="@dimen/margin_m2"/>
            <TextView
                android:id="@+id/bef_yesterday_used_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/listview_text_2"
                android:textColor="@color/light_sec_text_color"
                android:layout_marginLeft="@dimen/margin_m2"/>
        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="78dp">

    </View>


</LinearLayout>