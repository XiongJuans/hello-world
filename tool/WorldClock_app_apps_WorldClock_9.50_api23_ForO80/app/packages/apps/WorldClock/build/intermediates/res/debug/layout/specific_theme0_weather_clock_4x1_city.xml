<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <RelativeLayout
        android:id="@+id/city_name_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/align_base"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/theme_temp_block_margin_top"
            android:singleLine="true"
            android:text="@string/comma"
            android:visibility="invisible"
            style="@style/fixed_masthead_16"/>
        <TextView
            android:id="@+id/city_name_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/clock_weather_icon_location_dark_s"
            android:layout_marginRight="@dimen/leading"
            android:layout_alignBaseline="@id/align_base"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:letterSpacing="0.15"
            android:visibility="gone"
            style="@style/fixed_masthead_16"/>
        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/theme_italic_padding"
            android:layout_alignBaseline="@id/align_base"
            android:layout_toRightOf="@+id/city_name_icon"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:letterSpacing="0.15"
            android:visibility="gone"
            style="@style/fixed_masthead_16"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/city_name_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/city_name_area"
        android:layout_alignBottom="@id/city_name_area"
        android:layout_alignLeft="@id/city_name_area"
        android:layout_alignRight="@id/city_name_area"/>
</RelativeLayout>
