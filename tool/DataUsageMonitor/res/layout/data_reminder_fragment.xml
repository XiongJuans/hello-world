<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <Switch
        android:id="@+id/data_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/used_reminder"
        android:textSize="@dimen/Text_size"
        android:textColor="@color/light_main_text_color"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <Switch
        android:id="@+id/auto_turnoff_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Text_size"
        android:textColor="@color/light_main_text_color"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="@string/used_reminder_turnoff" />

    <Switch
        android:id="@+id/monthly_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/light_main_text_color"
        android:textSize="@dimen/Text_size"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="@string/monthly_remaining_reminder" />

    <EditText
        android:id="@+id/monthly_reminder_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="6"
        android:inputType="number"
        android:textSize="@dimen/Text_size"
        android:background="@drawable/edittext_selector"
        android:backgroundTint="@color/selector_color_edittext"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textCursorDrawable="@null"/>

    <Switch
        android:id="@+id/daily_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Text_size"
        android:textColor="@color/light_main_text_color"
        android:text="@string/daily_used_reminder"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <EditText
        android:id="@+id/daily_reminder_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="6"
        android:textSize="@dimen/Text_size"
        android:inputType="number"
        android:background="@drawable/edittext_selector"
        android:backgroundTint="@color/selector_color_edittext"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textCursorDrawable="@null"/>
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>
    <TextView
        android:id="@+id/reminder_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Portraint_Fixed_Height_of_Footers"
        android:background="@drawable/common_app_bkg_down_light_src"
        android:gravity="center"
        style="@style/footerPrmiary_m"
        android:layout_gravity="bottom"
        android:text="@string/ok" />

</LinearLayout>