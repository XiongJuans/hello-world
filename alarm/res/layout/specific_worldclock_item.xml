<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:htc="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    
    <com.htc.lib1.cc.widget.HtcListItem
        android:id="@+id/info_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        htc:itemMode="keepMediumHeightMode"
        android:layout_weight="1">
        
        <ImageView
            android:id="@+id/city_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
        />
        
        <com.htc.lib1.cc.widget.HtcListItem2LineText
            android:id="@+id/zone_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
    </com.htc.lib1.cc.widget.HtcListItem>

    <include layout="@layout/specific_digital_clock_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/digital_clock_height"
        android:layout_marginRight="@dimen/common_dimen_m1"
    />
</LinearLayout>
