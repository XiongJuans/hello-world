<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:orientation="horizontal" >
		<TextView android:id="@+id/lap_id" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="@dimen/common_dimen_m1"
            android:layout_weight="1"
            style="@style/fixed_list_primary_xxs"/>
        <TextView android:id="@+id/lap_total_time" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2"
            style="@style/fixed_list_primary_xxs" />
		<TextView android:id="@+id/lap_time" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="@dimen/common_dimen_m1"
            android:layout_weight="1"
            style="@style/fixed_list_primary_xxs" />
</LinearLayout>

	
