<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <TextView 
        android:id="@+id/align_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/theme1_temp_margin_top"
        android:paddingBottom="@dimen/theme1_temp_margin_bottom"
        android:singleLine="true"
        android:text="@string/comma"
        android:visibility="invisible"        
        style="@style/fixed_masthead_05"/>
    <TextView
        android:id="@+id/week_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/align_base"
        android:layout_alignBaseline="@id/align_base"
        android:singleLine="true"
        style="@style/fixed_masthead_05"/>
    <TextView
        android:id="@+id/holiday_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/week_date"
        android:layout_alignBaseline="@id/align_base"
        android:singleLine="true"
        style="@style/fixed_masthead_05"/>    
    <ImageView 
        android:id="@+id/separatrix"
        android:layout_width="@dimen/theme1_separatrix_width"
        android:layout_height="@dimen/theme1_separatrix_height"
        android:layout_toRightOf="@id/holiday_name"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing"
        android:layout_marginRight="@dimen/spacing"
        android:src="@android:color/white"
        android:visibility="gone"/>
    <TextView 
        android:id="@+id/city_name"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/clock_weather_icon_location_dark_s"
        android:layout_alignBaseline="@id/week_date"
        android:layout_toRightOf="@id/separatrix"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:visibility="gone"
        style="@style/fixed_masthead_05"/>
    <FrameLayout 
        android:id="@+id/city_name_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/city_name"
        android:layout_alignBottom="@id/city_name"
        android:layout_alignLeft="@id/city_name"
        android:layout_alignRight="@id/city_name"/>
</RelativeLayout>
