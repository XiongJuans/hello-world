<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <RelativeLayout
        android:id="@+id/city_name_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/align_base"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/theme3_temp_block_margin_top"
            android:maxLines="1"
            android:text="@string/comma"
            android:visibility="invisible"
            style="@style/fixed_masthead_19"/>
        <TextView
            android:id="@+id/city_name_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/clock_weather_icon_location_dark_s"
            android:layout_marginLeft="@dimen/theme3_city_name_icon_margin_right"
            android:scaleX="@string/theme3_city_icon_scale"
            android:scaleY="@string/theme3_city_icon_scale"
            android:layout_alignBaseline="@id/align_base"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:letterSpacing="@string/theme3_letter_spacing"
            android:visibility="gone"
            style="@style/fixed_masthead_19"/>
        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/align_base"
            android:layout_toRightOf="@+id/city_name_icon"
            android:singleLine="true"
            android:ellipsize="none"
            android:requiresFadingEdge="horizontal"
            android:letterSpacing="@string/theme3_letter_spacing"
            android:visibility="gone"
            style="@style/fixed_masthead_19"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/city_name_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/city_name_area"
        android:layout_alignBottom="@id/city_name_area"
        android:layout_alignLeft="@id/city_name_area"
        android:layout_alignRight="@id/city_name_area"/>
</RelativeLayout>
